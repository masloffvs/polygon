{
  "name": "@exchange/wallet-taker",
  "version": "2.0.0",
  "description": "High-availability wallet taker client with ElysiaJS API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run src/index.ts",
    "dev:web": "cd web && bun run dev",
    "dev:web+server": "concurrently \"bun run dev\" \"bun run dev:web\"",
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:web": "cd web && bun run build",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/swagger": "^1.1.5",
    "dotenv": "^16.3.1",
    "elysia": "^1.1.29",
    "pino": "^8.17.2",
    "pino-pretty": "^13.1.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/ws": "^8.5.10",
    "concurrently": "^9.1.2"
  }
}
