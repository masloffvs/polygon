{
  "id": "array-remap",
  "version": "1.0.0",
  "name": "Array ReMap",
  "category": "Arrays",
  "description": "Picks/renames keys from each object in an array. [{id,name,stuff}] â†’ [{id,name}]",
  "ui": { "color": "#3b82f6", "icon": "replace" },
  "execution": { "timeoutMs": 5000, "recoverable": true },
  "ports": {
    "inputs": [
      {
        "name": "array",
        "type": "array",
        "description": "Array of objects to remap"
      }
    ],
    "outputs": [
      { "name": "result", "type": "array", "description": "Remapped array" }
    ]
  },
  "settings": [
    {
      "name": "pickKeys",
      "type": "text",
      "label": "Pick keys (comma-separated, e.g. id,name,price)",
      "defaultValue": ""
    },
    {
      "name": "renameMap",
      "type": "text",
      "label": "Rename keys (old:new pairs, e.g. userId:id,userName:name)",
      "defaultValue": ""
    },
    {
      "name": "defaults",
      "type": "text",
      "label": "Defaults JSON (e.g. {\"status\":\"active\"})",
      "defaultValue": ""
    },
    {
      "name": "dropNull",
      "type": "select",
      "label": "Drop null/undefined values",
      "defaultValue": "false",
      "options": [
        { "label": "No", "value": "false" },
        { "label": "Yes", "value": "true" }
      ]
    }
  ]
}
