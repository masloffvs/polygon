{
  "id": "string-split",
  "version": "1.0.0",
  "name": "String Split",
  "category": "Converters",
  "description": "Splits a string into an array by delimiter.",
  "ui": {
    "color": "#8b5cf6",
    "icon": "scissors"
  },
  "ports": {
    "inputs": [
      {
        "name": "data",
        "type": "string",
        "description": "String to split"
      }
    ],
    "outputs": [
      {
        "name": "result",
        "type": "array",
        "description": "Array of string parts"
      },
      {
        "name": "count",
        "type": "number",
        "description": "Number of parts"
      }
    ]
  },
  "settings": [
    {
      "name": "delimiter",
      "type": "string",
      "label": "Delimiter",
      "defaultValue": ","
    },
    {
      "name": "trim",
      "type": "boolean",
      "label": "Trim whitespace",
      "defaultValue": true
    },
    {
      "name": "limit",
      "type": "number",
      "label": "Max parts (0 = unlimited)",
      "defaultValue": 0
    }
  ]
}
